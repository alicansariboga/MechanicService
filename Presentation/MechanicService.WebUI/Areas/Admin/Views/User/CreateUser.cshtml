@model CreateRegisterDto

@{
    ViewData["Title"] = "CreateUser";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title"> Kullanıcı Ekle </h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Kullanıcı</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Ekle</li>
                </ol>
            </nav>
        </div>
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Kullanıcı Ekleme Formu</h4>
                        <form class="forms-sample" method="post">
                            <div class="form-group">
                                <label name="Title">Kullanıcı Adı</label>
                                <input type="text" class="form-control" asp-for="Username" placeholder="Kullanıcı Adı">
                            </div>
                            <div class="form-group">
                                <label name="Name">İsim</label>
                                <input type="text" class="form-control" asp-for="Name" placeholder="İsim">
                            </div>
                            <div class="form-group">
                                <label name="Surname">Soyisim</label>
                                <input type="text" class="form-control" asp-for="Surname" placeholder="Soyisim">
                            </div>
                            <div class="form-group">
                                <label name="Title">Mail Adresi</label>
                                <input type="text" class="form-control" asp-for="Email" placeholder="Mail Adresi">
                            </div>
                            <div class="form-group">
                                <label name="Title">Şifre</label>
                                <input type="password" class="form-control" asp-for="Password" placeholder="Şifre">
                            </div>
                            <div class="form-group">
                                <label name="Title">Şifre Tekrar</label>
                                <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Şifre Tekrar">
                            </div>
                            <div class="form-group">
                                <label name="Title">Yetki</label>
                                <div class="d-block">
                                    <select class="form-select" aria-label="Default select example" disabled>
                                        <option value="3">Member</option>
                                    </select>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                            <a href="/Admin/User/AllUsers/">
                                <button class="btn btn-light">İptal</button>
                            </a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

