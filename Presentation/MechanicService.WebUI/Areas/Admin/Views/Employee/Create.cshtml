@model CreateTeamDto

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title"> Çalışan Ekle </h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Çalışan</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Ekle</li>
                </ol>
            </nav>
        </div>
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Çalışan Ekleme Formu</h4>
                        <p class="card-description"> Çalışan Ekle </p>
                        <form class="forms-sample" method="post">
                            <div class="form-group">
                                <label name="Name">İsim</label>
                                <input type="text" class="form-control" asp-for="Name" placeholder="İsim">
                            </div>
                            <div class="form-group">
                                <label name="Surname">Soyisim</label>
                                <input type="text" class="form-control" asp-for="Surname" placeholder="Soyisim">
                            </div>
                            <div class="form-group">
                                <label name="Title">Görevi</label>
                                <input type="text" class="form-control" asp-for="Title" placeholder="Görevi">
                            </div>
                            <div class="form-group">
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="Gender" id="inlineRadio1" value="true" asp-for="Gender">
                                    <label class="form-check-label"> Erkek </label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="Gender" id="inlineRadio2" value="false" asp-for="Gender">
                                    <label class="form-check-label"> Kadın </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <label name="ImageUrl">Resim Yolu(Link)</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" placeholder="Resim Yolu(Link)">
                            </div>
                            <div class="form-group">
                                <label name="WorkStartDate">İşe Başlama Tarihi</label>
                                <input type="date" class="form-control" asp-for="WorkStartDate" placeholder="İşe Başlama Tarihi">
                            </div>
                            <div class="form-group">
                                <label name="Title">Açıklama</label>
                                <textarea rows="6" type="text" class="form-control" asp-for="Description" placeholder="Açıklama"></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                            <a href="/Admin/Employee/Index/">
                                <button class="btn btn-light">İptal</button>
                            </a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


