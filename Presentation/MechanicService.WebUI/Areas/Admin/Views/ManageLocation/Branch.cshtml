@model LocationsViewModel

@{
    ViewData["Title"] = "Branch";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-header">
    <h3 class="page-title"> İLÇE LOKASYONLARI </h3>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Lokasyonlar</a></li>
            <li class="breadcrumb-item active" aria-current="page">İlçe</li>
        </ol>
    </nav>
</div>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">İlçelere Göre Lokasyonlar</h4>
            <p class="card-description">
                Aşağıdaki tablodan <code>uygun ilçeleri</code> seçerek şube bilgilerine ulaşabilir ve güncelleme yapabilirsiniz.
            </p>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Şehir Plaka</th>
                        <th>İlçe Adı</th>
                        <th>Şube Durumu</th>
                        <th colspan="3" style="border-left: 1px solid #DEE2E6; text-align: center">Diğer İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.DistrictDatas == null)
                    {
                        <tr>
                            <td colspan="5" style="text-align: center">Henüz ilçe bilgisi bulunmamaktadır.</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model.DistrictDatas)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>
                                    @item.CityID
                                </td>
                                <td>
                                    @item.Name
                                </td>
                                @if (item.IsActive == true)
                                {
                                    <td><label class="badge badge-success">Aktif</label></td>
                                }
                                else
                                {
                                    <td><label class="badge badge-danger">Aktif Değil</label></td>
                                }
                                <td>
                                    <button type="button" class="btn btn-primary btn-sm">Güncelle</button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
