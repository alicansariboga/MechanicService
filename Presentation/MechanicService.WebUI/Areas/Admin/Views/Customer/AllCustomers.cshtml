@model List<ResultCustomerWithCountDto>

@{
    ViewData["Title"] = "AllCustomers";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Aktif Müşteriler</h4>
            <p class="card-description">
                Sistemde kayıtlı müşterilere aşağıda bulunan tablodan ulaşabilirsiniz.
            </p>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>İsim</th>
                        <th>Kimlik Bilgisi</th>
                        <th>Telefon Numarası</th>
                        <th>İkincl Numara</th>
                        <th>Email</th>
                        <th>İlk İşlem Tarihi</th>
                        <th>Son İşlem Tarihi</th>
                        <th>Toplam İşlem</th>
                        <th>Git</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td class="py-1">
                                <img src="~/admin/assets/images/faces-clipart/pic-1.png" alt="image" />
                                @item.Name @item.Surname
                            </td>
                            <td>@item.IdentityNumber</td>
                            <td>@item.Phone</td>
                            <td>@item.PhoneOpt</td>
                            <td>@item.Email</td>
                            <td>@item.CreateDate.ToShortDateString()</td>
                            <td>@item.LastDate.ToShortDateString()</td>
                            <td>@item.RezCount</td>
                            <td><a class="btn btn-primary" href="/Admin/Customer/CustomerInformation/@item.Id">Müşteri Bilgileri</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

