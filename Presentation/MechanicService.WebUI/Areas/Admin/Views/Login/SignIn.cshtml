@model CreateLoginDto

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
@await Html.PartialAsync("/Areas/Admin/Views/AdminLayout/AdminHeadPartial.cshtml")
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row flex-grow">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left p-5">
                            <div class="brand-logo">
                                <img src="~/img/logo-normal.png">
                            </div>
                            <h4>Merhaba! Haydi Başlayalım.</h4>
                            <h6 class="font-weight-light">Devam etmek için giriş yapın.</h6>
                            <form class="pt-3" method="post">
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-lg" id="exampleInputEmail1" asp-for="Username" placeholder="Kullanıcı Adı">
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control form-control-lg" id="exampleInputPassword1" asp-for="Password" placeholder="Şifre">
                                </div>
                                <div class="mt-3">
                                    <button class="btn btn-primary"><span>Giriş Yap</span></button>
                                </div>
                                <div class="my-2 d-flex justify-content-between align-items-center">
                                    <div class="form-check">
                                        <label class="form-check-label text-muted">
                                            <input type="checkbox" class="form-check-input"> Oturumu açık tut
                                        </label>
                                    </div>
                                    <a href="/Admin/ResetPassword/ForgetPassword/" class="auth-link text-black">Şifrenizi mi unuttunuz?</a>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Bir hesabın yok mu? <a href="/Admin/Login/SignUp/" class="text-primary">Şimdi Oluştur</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("/Areas/Admin/Views/AdminLayout/AdminScriptPartial.cshtml")
</body>
</html>