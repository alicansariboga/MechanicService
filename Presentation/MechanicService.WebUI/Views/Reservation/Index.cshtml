
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
}

<!-- Page Title -->
<div class="page-title-area">
    <img src="assets/img/home-one/footer-car.png" alt="Title">
    <div class="container">
        <div class="page-title-content">
            <h2>;Hemen Rezervasyon Yap</h2>
            <ul>
                <li>
                    <a href="/">Ana Sayfa</a>
                </li>
                <li>
                    <i class='bx bx-chevron-right'></i>
                </li>
                <li>Rezervasyon</li>
            </ul>
        </div>
    </div>
</div>

<section class="contact-area pt-100 pb-70">
    <div class="container">
        <div class="row">
            <div class="col-2"></div>
            <div class="col-sm-8 col-lg-8">
                <div class="contact-item contact-right">
                    <form id="contactForm">
                        <h3>Hizmet Talebi</h3>
                        <div class="row">
                            <div class="col-sm-12 col-lg-12">
                                <div class="form-group">
                                    <select class="form-select" aria-label="Default select example">
                                        <option selected>Hizmeti Seçiniz</option>
                                        <option value="1">One</option>
                                        <option value="2">Two</option>
                                        <option value="3">Three</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <h3>Müşteri Bilgileri</h3>
                        <div class="row">
                            <div class="col-sm-6 col-lg-6">
                                <div class="form-group">
                                    <input type="text" name="name" id="name" class="form-control" required data-error="Bu alan boş bırakılamaz." placeholder="İsminiz">
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>

                            <div class="col-sm-6 col-lg-6">
                                <div class="form-group">
                                    <input type="text" name="surname" id="surname" class="form-control" required data-error="Bu alan boş bırakılamaz." placeholder="Soyisminiz">
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>

                            <div class="col-sm-6 col-lg-6">
                                <div class="form-group">
                                    <input type="text" name="identity_number" id="identity_number" required data-error="Bu alan boş bırakılamaz." class="form-control" placeholder="Kimlik Numaranız">
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>

                            <div class="col-sm-6 col-lg-6">
                                <div class="form-group">
                                    <input type="email" name="email" id="email" class="form-control" required data-error="Bu alan boş bırakılamaz." placeholder="Mail Adresiniz">
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>

                            <div class="col-sm-6 col-lg-6">
                                <div class="form-group">
                                    <input type="text" name="phone_number" id="phone_number" required data-error="Bu alan boş bırakılamaz." class="form-control" placeholder="Telefon Numaranız">
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>

                            <div class="col-sm-6 col-lg-6">
                                <div class="form-group">
                                    <input type="text" name="phone_number_2" id="phone_number_2" required data-error="Bu alan boş bırakılamaz." class="form-control" placeholder="İkincil Telefon Numaranız">
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                        </div>

                        <h3>Araç Bilgileri</h3>
                        <div class="row">
                            <div class="col-sm-6 col-lg-6">
                                <div class="form-group">
                                    <select class="form-select" aria-label="Default select example">
                                        <option selected>Marka Seçiniz</option>
                                        <option value="1">One</option>
                                        <option value="2">Two</option>
                                        <option value="3">Three</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-sm-6 col-lg-6">
                                <div class="form-group">
                                    <select class="form-select" aria-label="Default select example">
                                        <option selected>Model Seçiniz</option>
                                        <option value="1">One 1</option>
                                        <option value="2">Two 2</option>
                                        <option value="3">Three 3</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-sm-4 col-lg-4">
                                <div class="form-group">
                                    <select class="form-select" aria-label="Default select example">
                                        <option selected>Yıl Seçiniz</option>
                                        <option value="1">2024</option>
                                        <option value="1">2023</option>
                                        <option value="1">2022</option>
                                        <option value="1">2021</option>
                                        <option value="1">2020</option>
                                        <option value="1">2019</option>
                                        <option value="1">2018</option>
                                        <option value="1">2017</option>
                                        <option value="1">2016</option>
                                        <option value="1">2015</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-sm-4 col-lg-4">
                                <div class="form-group">
                                    <input type="number" name="car_km" id="car_km" required data-error="Bu alan boş bırakılamaz." class="form-control" placeholder="Km">
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>

                            <div class="col-sm-4 col-lg-4">
                                <div class="form-group">
                                    <input type="text" name="car_plate" id="car_plate" class="form-control" required data-error="Bu alan boş bırakılamaz." placeholder="Plaka">
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                        </div>

                        <h3>Randevu Bilgileri</h3>
                        <div class="row">
                            <div class="col-sm-6 col-lg-6">
                                <div class="form-group">
                                    <select class="form-select" aria-label="Default select example">
                                        <option selected>İl Seçiniz</option>
                                        <option value="1">One</option>
                                        <option value="2">Two</option>
                                        <option value="3">Three</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-sm-6 col-lg-6">
                                <div class="form-group">
                                    <select class="form-select" aria-label="Default select example">
                                        <option selected>İlçe Seçiniz</option>
                                        <option value="1">One</option>
                                        <option value="2">Two</option>
                                        <option value="3">Three</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-sm-6 col-lg-6">
                                <div class="form-group mr-2">
                                    <label for="" class="label">Randevu Tarihi</label>
                                    <input type="text" class="form-control" name="rez_date" id="rez_date" placeholder="Date">
                                </div>
                            </div>
                            <div class="col-sm-6 col-lg-6">
                                <div class="form-group mr-2">
                                    <label for="" class="label">Randevu Saati</label>
                                    <input type="text" class="form-control" name="rez_time" id="rez_time" placeholder="Time">
                                </div>
                            </div>
                            <div class="col-md-12 col-lg-12">
                                <div class="form-group">
                                    <textarea name="message" class="form-control" id="message" cols="30" rows="8" placeholder="Açıklama"></textarea>
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12">
                                <div class="form-group">
                                    <div class="form-check agree-label">
                                        <input name="gridCheck"
                                               value="I agree to the terms and privacy policy."
                                               class="form-check-input"
                                               type="checkbox"
                                               id="gridCheck"
                                               required>
                                        <label class="form-check-label" for="gridCheck">
                                            <a href="terms-condition.html">Koşullar & Şartlar</a> ve <a href="privacy-policy.html">Gizlilik Politikasını</a> kabul ediyorum.
                                        </label>
                                        <div class="help-block with-errors gridCheck-error"></div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-12 col-lg-12">
                                <button type="submit" class="contact-btn btn">
                                    Gönder
                                </button>
                                <div id="msgSubmit" class="h3 text-center hidden"></div>
                                <div class="clearfix"></div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-2"></div>
        </div>
    </div>
</section>

