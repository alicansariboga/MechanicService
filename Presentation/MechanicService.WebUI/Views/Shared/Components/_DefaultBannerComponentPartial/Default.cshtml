@model List<ResultBannerDto>

<!-- Banner -->
<div class="banner-slider owl-theme owl-carousel">
    @foreach(var item in Model)
    {
        <div class="banner-area-three" style="background-image: url('@item.CoverImg'); background-size: cover; background-position: center;">
            <div class="d-table">
                <div class="d-table-cell">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-8">
                                <div class="banner-text">
                                    <h1>@item.Title</h1>
                                    <p>@item.Description</p>
                                    <div class="cmn-btn">
                                        <a class="banner-btn-left" href="/Service/Index/">
                                            <i class='bx bx-meteor'></i>
                                            Servisleri Keşfet
                                        </a>
                                        <a class="banner-btn-right" href="tel:03123120000">
                                            <i class='bx bx-phone-call'></i>
                                            0312 312 00 00
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="video-wrap">
                                    <a href="@item.MediaUrl" class="popup-youtube">
                                        <i class='bx bx-play'></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Banner Call -->
<div class="banner-call">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7">
                <div class="banner-call-content">
                    <h3>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt </h3>
                </div>
            </div>
            <div class="col-lg-5">
                <div class="cmn-btn">
                    <a class="banner-btn-left" href="tel:03123120000">
                        Şimdi Ara
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

