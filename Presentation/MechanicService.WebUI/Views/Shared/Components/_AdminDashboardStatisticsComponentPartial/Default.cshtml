<div class="row">
    <div class="mt-3">
        <svg xmlns="http://www.w3.org/2000/svg" class="d-none">
            <symbol id="check-circle-fill" viewBox="0 0 16 16">
                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
            </symbol>
            <symbol id="info-fill" viewBox="0 0 16 16">
                <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z" />
            </symbol>
            <symbol id="exclamation-triangle-fill" viewBox="0 0 16 16">
                <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
            </symbol>
        </svg>
        <div class="row">
            <div class="col-sm-6">
                @if (ViewBag.reservationsToday == 0)
                {
                    <div class="alert alert-warning d-flex align-items-center" role="alert">
                        <svg class="bi flex-shrink-0 ml-2" width="24" height="24" role="img" aria-label="Warning:"><use xlink:href="#exclamation-triangle-fill" /></svg>
                        <div>
                            Bugün, sistemde görünen herhangi bir rezervasyonunuz yoktur.
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-primary d-flex align-items-center" role="alert">
                        <svg class="bi flex-shrink-0 ml-2" width="24" height="24" role="img" aria-label="Info:"><use xlink:href="#info-fill" /></svg>
                        <div>
                            <h5 class="mb-2 text-dark font-weight-normal">
                                Bugün, sistemde görünen <strong>@ViewBag.reservationsToday</strong> adet rezervasyonunuz vardır.
                            </h5>
                        </div>
                    </div>
                }
            </div>
            <div class="col-sm-6">
                <div class="alert alert-danger d-flex align-items-center" role="alert">
                    <svg class="bi flex-shrink-0 ml-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill" /></svg>
                    <div>
                        <strong>X</strong> adet okunmamış mesajınız vardır.<br /> Görüntülemek için <a href="#">buraya</a> tıklayınız.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xl-3 col-lg-6 col-sm-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body text-center">
                <h5 class="mb-2 text-dark font-weight-normal">Reservasyonlar</h5>
                <h2 class="mb-4 text-dark font-weight-bold">@ViewBag.allReservations</h2>
                <div class="dashboard-progress dashboard-progress-1 d-flex align-items-center justify-content-center item-parent"><i class="mdi mdi-lightbulb icon-md absolute-center text-dark"></i></div>
                <div class="row">
                    <div class="col-sm-6">
                        <p class="mt-4 mb-0">Tamamlanan</p>
                        <h3 class="mb-0 font-weight-bold mt-2 text-dark">@ViewBag.completedReservations</h3>
                    </div>
                    <div class="col-sm-6">
                        <p class="mt-4 mb-0">Bekleyen</p>
                        <h3 class="mb-0 font-weight-bold mt-2 text-dark">@ViewBag.pendingReservations</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-lg-6 col-sm-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body text-center">
                <h5 class="mb-2 text-dark font-weight-normal">Şube Sayısı</h5>
                <h2 class="mb-4 text-dark font-weight-bold">@ViewBag.activeLocations</h2>
                <div class="dashboard-progress dashboard-progress-3 d-flex align-items-center justify-content-center item-parent"><i class="mdi mdi-cube icon-md absolute-center text-dark"></i></div>
                <div class="row">
                    <div class="col-sm-6">
                        <p class="mt-4 mb-0">Şehir Sayısı</p>
                        <h3 class="mb-0 font-weight-bold mt-2 text-dark">@ViewBag.activeLocations</h3>
                    </div>
                    <div class="col-sm-6">
                        <p class="mt-4 mb-0">İlçe Sayısı</p>
                        <h3 class="mb-0 font-weight-bold mt-2 text-dark">X</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-lg-6 col-sm-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body text-center">
                <h5 class="mb-2 text-dark font-weight-normal">Müşteriler</h5>
                <h2 class="mb-4 text-dark font-weight-bold">@ViewBag.allCustomers</h2>
                <div class="dashboard-progress dashboard-progress-4 d-flex align-items-center justify-content-center item-parent"><i class="mdi mdi-account-circle icon-md absolute-center text-dark"></i></div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-lg-6 col-sm-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body text-center">
                <h5 class="mb-2 text-dark font-weight-normal">Markalar</h5>
                <h2 class="mb-4 text-dark font-weight-bold">@ViewBag.brands</h2>
                <div class="dashboard-progress dashboard-progress-2 d-flex align-items-center justify-content-center item-parent"><i class="mdi mdi-eye icon-md absolute-center text-dark"></i></div>
                <p class="mt-4 mb-0">Modeller</p>
                <h3 class="mb-0 font-weight-bold mt-2 text-dark">X</h3>
            </div>
        </div>
    </div>
</div>