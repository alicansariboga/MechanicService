@model FooterViewModel

<!-- Footer Address -->
<footer>
    <div class="footer-img">
        <img src="~/img/home-one/footer-car.png" alt="Footer">
    </div>
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-lg-3">
                <div class="footer-item">
                    <div class="footer-logo">
                        <a href="index.html">
                            <img src="~/img/logo-two.png" alt="Logo">
                        </a>
                        @foreach(var item in Model.AddressDatas)
                        {
                            <p>@item.Description</p>
                        }
                        <ul>
                            @foreach(var item in Model.SocialMediaDatas)
                            {
                                <li>
                                    <a href="@item.LinkUrl" target="_blank">
                                        <i class='@item.IconUrl'></i>
                                        <span class="icon-name">@item.Name</span>
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-lg-3">
                <div class="footer-item">
                    <div class="footer-service">
                        <h3>Hizmetler</h3>
                        <ul>
                            @foreach(var item in Model.ServiceDatas)
                            {
                                <li>
                                    <a href="#" target="_blank">
                                        <i class='bx bx-chevron-right'></i>
                                        @item.Title
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-lg-3">
                <div class="footer-item">
                    <div class="footer-service">
                        <h3>Hızlı Linkler</h3>
                        <ul>
                            <li>
                                <a href="/" target="_blank">
                                    <i class='bx bx-chevron-right'></i>
                                    Ana Sayfa
                                </a>
                            </li>
                            <li>
                                <a href="about.html" target="_blank">
                                    <i class='bx bx-chevron-right'></i>
                                    Servis Noktaları
                                </a>
                            </li>
                            <li>
                                <a href="blog.html" target="_blank">
                                    <i class='bx bx-chevron-right'></i>
                                    Kurumsal
                                </a>
                            </li>
                            <li>
                                <a href="engineer.html" target="_blank">
                                    <i class='bx bx-chevron-right'></i>
                                    İletişim
                                </a>
                            </li>
                            <li>
                                <a href="testimonial.html" target="_blank">
                                    <i class='bx bx-chevron-right'></i>
                                    Sıkça Sorulan Sorular
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-lg-3">
                <div class="footer-item">
                    <div class="footer-service footer-find">
                        <h3>Bize Ulaşın</h3>
                        <ul>
                            @foreach(var item in Model.AddressDatas)
                            {
                                <li>
                                    <i class='bx bx-location-plus'></i>
                                    @item.LongAddress
                                    @item.District/ @item.City
                                </li>
                                <li>
                                    <i class='bx bx-phone-call'></i>
                                    <a href="tel:@item.Phone">
                                        @item.Phone
                                    </a>
                                </li>
                                <li>
                                    <i class='bx bx-phone-call'></i>
                                    <a href="tel:+@item.PhoneOpt">
                                        +@item.PhoneOpt
                                    </a>
                                </li>
                                <li>
                                    <i class='bx bx-mail-send'></i>
                                    <a href="mailto:@item.Email">
                                        @item.Email
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="copyright-area">
            <div class="row">
                <div class="col-lg-7">
                    <div class="copyright-item">
                        <p>Telif Hakkı <script>document.write(new Date().getFullYear())</script> Mekanik Servis. <a href="https://github.com/alicansariboga" target="_blank">Ali Can SARIBOĞA</a> tarafından hazırlandı.</p>
                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="copyright-item copyright-right">
                        <ul>
                            <li>
                                <a href="/TermCondition/Index/" target="_blank">Koşullar & Şartlar</a>
                            </li>
                            <li>
                                <span>-</span>
                            </li>
                            <li>
                                <a href="/Privacy/Index/" target="_blank">Gizlilik Politikası</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>