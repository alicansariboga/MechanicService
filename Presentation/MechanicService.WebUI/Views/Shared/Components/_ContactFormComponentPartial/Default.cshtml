@model CreateContactDto

<div class="col-lg-6">
    <div class="contact-item contact-right">
        <h3>İletişime Geçin</h3>
        <form class="contactForm" method="post">
            <div class="row">
                <div class="col-sm-6 col-lg-6">
                    <div class="form-group">
                        <input type="text" class="form-control" required data-error="Lütfen gerekli alanları doldurunuz." placeholder="Adınız" asp-for="Name">
                        <div class="help-block with-errors"></div>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-6">
                    <div class="form-group">
                        <input type="text" class="form-control" required data-error="Lütfen gerekli alanları doldurunuz." placeholder="Soyadınız" asp-for="Surname">
                        <div class="help-block with-errors"></div>
                    </div>
                </div>

                <div class="col-sm-6 col-lg-6">
                    <div class="form-group">
                        <input type="email" class="form-control" required data-error="Lütfen gerekli alanları doldurunuz." placeholder="Mail Adresi" asp-for="Email">
                        <div class="help-block with-errors"></div>
                    </div>
                </div>

                <div class="col-sm-6 col-lg-6">
                    <div class="form-group">
                        <input type="text" class="form-control" required data-error="Lütfen gerekli alanları doldurunuz." placeholder="Konu" asp-for="Subject">
                        <div class="help-block with-errors"></div>
                    </div>
                </div>

                <div class="col-md-12 col-lg-12">
                    <div class="form-group">
                        <textarea class="form-control" cols="30" rows="8" required data-error="Lütfen gerekli alanları doldurunuz." placeholder="Mesajınız" asp-for="Message"></textarea>
                        <div class="help-block with-errors"></div>
                    </div>
                </div>

                <div class="col-lg-12 col-md-12">
                    <div class="form-group">
                        <div class="form-check agree-label">
                            <input name="gridCheck"
                                   value="I agree to the terms and privacy policy."
                                   class="form-check-input"
                                   type="checkbox"
                                   id="gridCheck"
                                   required
                                   data-error="Şartlarımızı okuyup kabul ettğinizi onaylayınız.">
                            <label class="form-check-label" for="gridCheck">
                                <a href="#">Koşullar &amp; Şartlar</a> ve <a href="#">Gizlilik Politikasını</a> kabul ediyorum.
                            </label>
                            <div class="help-block with-errors gridCheck-error"></div>
                        </div>
                    </div>
                </div>

                <div class="col-md-12 col-lg-12">
                    <button type="submit" class="contact-btn btn">
                        Mesajı Gönder
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>